<table class="body" width="100%" cellpadding="0" cellspacing="0" style="background-color:#191a21">
  <tbody>
  <tr>
    <td
      style="width:100%;margin:0;padding:0;background-color:#191a21"
      align="center"
    >
      <table
        width="100%"
        cellpadding="0"
        cellspacing="0"
      >

        <tbody>
        <tr>
          <td
            style="padding:25px 0;text-align:center"
          >
            <a
              style="font-family:Arial,'Helvetica Neue',Helvetica,sans-serif;font-size:16px;font-weight:bold;color:#fff;text-decoration:none;font-size:30px"
              href="{{site_url}}"
              target="_blank"
            >
              {{site_name}}
            </a>
          </td>
        </tr>


        <tr>
          <td
            style="width:100%;margin:0;padding:0;border-top:1px solid #edeff2;border-bottom:1px solid #edeff2;background-color:#191a21"
            width="100%"
          >
            <table
              style="width:auto;max-width:570px;min-width:570px;margin:0 auto;padding:0"
              align="center"
              width="570"
              cellpadding="0"
              cellspacing="0"
            >
              <tbody>
              <tr>
                <td
                  style="font-family:Arial,'Helvetica Neue',Helvetica,sans-serif;padding:35px"
                >

                  {{#if greeting}}
                    <h1
                      style="margin-top:0;color:#d9d9d9;font-size:19px;font-weight:bold;text-align:left"
                    >
                      {{greeting}}
                    </h1>
                  {{/if}}

                  {{#if paragraphs}}
                    {{#each paragraphs}}
                      <p
                        style="margin-top:0;color:#d9d9d9;font-size:16px;line-height:1.5em;margin-bottom: 1em"
                      >
                        {{this}}
                      </p>
                    {{/each}}
                  {{/if}}



                  {{#if button}}
                    <table style="width:100%;margin:30px auto;padding:0;text-align:center" align="center" width="100%"
                           cellpadding="0" cellspacing="0">
                      <tbody>
                      <tr>
                        <td align="center">

                          <a
                            href="{{button.link}}"
                            style="font-family:Arial,'Helvetica Neue',Helvetica,sans-serif;display:block;display:inline-block;width:200px;min-height:20px;padding:10px;border-radius:3px;color:#ffffff;font-size:15px;line-height:25px;text-align:center;text-decoration:none;background-color:{{#if button.color}}{{button.color}}{{/if}}{{#unless button.color}}#3869d4{{/unless}}"
                            target="_blank"
                          >
                            {{button.name}}
                          </a>
                        </td>
                      </tr>
                      </tbody>
                    </table>

                    {{#unless button.disable_extra_link}}
                      <table style="margin-top:25px;padding-top:25px;border-top:1px solid #edeff2">
                        <tbody>
                        <tr>
                          <td style="font-family:Arial,'Helvetica Neue',Helvetica,sans-serif">
                            <p style="margin-top:0;color:#d9d9d9;font-size:12px;line-height:1.5em">
                              {{#with button.extra_link_text}}
                                  {{this}}
                              {{else}}
                                Если у вас возникли проблемы с кнопкой, вы можете скопировать эту ссылку и открыть её в
                                браузере:
                              {{/with}}
                            </p>

                            <p style="margin-top:0;color:#d9d9d9;font-size:12px;line-height:1.5em">
                              <a style="color:#3869d4"
                                 href="{{button.link}}"
                                 target="_blank"
                              >
                                {{button.link}}
                              </a>
                            </p>
                          </td>
                        </tr>
                        </tbody>
                      </table>
                    {{/unless}}
                  {{/if}}

                </td>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>

        {{#if footer}}
          {{#if footer.footer_text}}
            <tr>
              <td>
                <table style="width:100%;margin:0 auto;padding:15px 0;text-align:center;border-bottom:1px solid #edeff2"
                       align="center"
                       width="100%"
                       cellpadding="0"
                       cellspacing="0"
                >
                  <tbody>
                  <tr>
                    <td align="center">
                      <p
                        style="margin:0 auto;color:#999999;font-size:12px;line-height:1.5em"
                      >
                        {{footer.footer_text}}
                      </p>
                    </td>
                  </tr>
                  </tbody>
                </table>
              </td>
            </tr>
          {{/if}}

          <tr>
            <td>
              <table
                style="width:auto;max-width:570px;margin:0 auto;padding:0;text-align:center;background-color:#191a21"
                align="center"
                width="570"
                cellpadding="0"
                cellspacing="0"
              >
                <tbody>
                <tr>
                  <td
                    style="font-family:Arial,'Helvetica Neue',Helvetica,sans-serif;color:#aeaeae;padding:35px;
                  text-align:center"
                  >
                    <p
                      style="margin-top:0;color:#d9d9d9;font-size:12px;line-height:1.5em"
                    >
                      {{#if footer.year}}
                        © {{footer.year.from}}-{{footer.year.to}}&nbsp;
                      {{/if}}

                      <a
                        style="color:#3869d4"
                        href="{{site_url}}"
                        target="_blank"
                      >
                        {{site_name}}
                      </a>
                    </p>
                  </td>
                </tr>
                </tbody>
              </table>
            </td>
          </tr>
        {{/if}}

        </tbody>
      </table>
    </td>
  </tr>
  </tbody>
</table>